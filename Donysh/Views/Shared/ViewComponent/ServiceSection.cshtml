@model HomeServiceSection

<section id="services" class="section gray-bg">
    <div class="container">
        <div class="row justify-content-center m-60px-b md-m-40px-b">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="section-title">
                    <h2 class="theme-after">Our Services</h2>
                    <p>@Html.Raw(Model.Description)</p>
                </div>
            </div>
        </div>

        <div class="row">
           @foreach (var item in Model.Services!)
           {
               <div class="col-md-4 md-m-25px-b mt-3">
                   <div class="services-item">
                       <div class="img">
                            <img src="~/Service/@item.Image" title="@item.Title" alt="@item.Title">
                       </div>
                       <div class="services-content">
                            <h4><a asp-controller="Service" asp-action="ServiceDetail" asp-route-serviceId="@item.Id">@item.Title</a></h4>
                           <p>@item.SmallDescription</p>
                            <a asp-controller="Service" asp-action="ServiceDetail" asp-route-serviceId="@item.Id" class="m-btn">View more</a>
                       </div>
                   </div>
               </div> <!-- col -->
           }
        </div> <!-- row -->

    </div> <!-- container -->
</section>