@model HomePortfolioSection
















<section id="portfolio" class="section">
    <div class="container">
        <div class="row justify-content-center m-60px-b md-m-40px-b">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="section-title">
                    <h2 class="theme-after">Our Portfolio</h2>
                    <p>
                        @Html.Raw(Model.Description)
                    </p>
                </div>
            </div>
        </div>

        <div class="portfolio-filter-01 m-15px-b text-center">
            <ul class="filter">
                <li class="active" data-filter="*">All</li>
                @foreach (var item in Model.ServiceItems!)
                {
                    <li data-filter=".@item.Id" class="">@item.Title</li>
                }

            </ul>
        </div> <!-- Portfolio Filter -->

        <div class="portfolio-content lightbox-gallery" style="position: relative; height: 548.953px;">
            <ul class="portfolio-cols portfolio-cols-4">
              @foreach (var item in Model.Projects!)
              {
                  <li class="portfolio-item @item.ServiceId" style="position: absolute; left: 0px; top: 0px;">
                      <div class="portfolio-col portfolio-hover-04">
                            <img src="~/Project/@item.ProjectImage" title="@item.ProjectName" alt="@item.ProjectName">
                          <a asp-controller="Project" asp-action="ProjectDetail" asp-route-projectId="@item.Id" class="overlay theme-bg"></a>
                          <div class="hover text-center p-10px">
                              <p class="font-alt color-white m-0px font-w-500 letter-spacing-1 font-alt font-18">
                                  @item.ProjectName
                              </p>
                              @* <label class="font-13 color-white font-w-300 letter-spacing-1">@item.ServiceTitle</label> *@
                          </div> <!-- hover -->
                      </div> <!-- .portfolio-co -->
                  </li> <!-- col -->
              }
            </ul> <!-- row -->
        </div> <!-- portfolio content -->
    </div> <!-- container -->
</section>