@model AboutPage
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("HeaderComponent","About");

<section class="section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 sm-m-30px-b">
                <img src="~/About/@Model.Banner" title="Dome" alt="Dome">
            </div>
            <div class="col-md-7">
                <div class="right-img-block">
                    <div class="section-title">
                        <h2 class="theme-after">About Us</h2>
                        <div class="col-md-11 col-lg-11 text-center p-0px-lr m-10px-t">
                      
                            <p>@Html.Raw(Model.Description)</p>
                        </div>
                    </div>
                </div>
            </div> <!-- col -->
           
        </div><!-- row -->
    </div>
</section>

<section id="team" class="section gray-bg">


    <div class="container">
        <div class="row justify-content-center m-25px-b md-m-20px-b">
            <div class="col-md-10 col-lg-5">
                <div class="section-title">
                    <h2 class="theme-after">CREATIVE TEAM</h2>
                    <p>@Html.Raw(Model.TeamDescription)</p>
                </div>
            </div>
        </div> <!-- row -->
        <div class="row">
            @foreach (var item in Model.Members)
            {
                <div class="col-md-6 col-lg-3 m-15px-tb">
                    <div class="our-team">
                        <a href="#">
                            <div class="img theme-before" style="background-image: url(/Team/@item.AvatarPath);"></div>
                            <div class="info">
                                <h6 class="theme-bg">@item.FullName</h6>
                                <span>@item.JobTitle</span>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- col -->

            }
        </div> <!-- row -->
    </div> <!-- container -->
</section>

                            
<section id="team" class="section bg-white">
    <div class="container">
        <div class="row justify-content-center m-25px-b md-m-20px-b">
            <div class="col-md-10 col-lg-5">
                <div class="section-title">
                    <h2 class="theme-after">Customers and business partners</h2>
                   
                </div>
            </div>
        </div> <!-- row -->
        <div class="row">
            @foreach (var item in Model.Companies)
            {
                <div class="col-md-4 col-lg-2 m-15px-tb">
                    <div class="our-team">
                        <a href="@item.Link">
                            <div class="img theme-before" style="background-image: url(/Company/@item.LogoPath);"></div>
                            
                        </a>
                    </div>
                </div> <!-- col -->
            
            }
        </div> <!-- row -->
    </div> <!-- container -->
</section>