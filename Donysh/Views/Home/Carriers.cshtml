@model List<EmploymentBox>
@{
    ViewData["Title"] = "Careers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@await Component.InvokeAsync("HeaderComponent", new HeaderModel()
{
    title = "Careers" ,
    project = false
})

<section class="section">
    <div class="container">
        <div class="row align-items-center">
           @if (Model.Count==0)
           {
                <h3>Currently, we have not published a job advertisement</h3>
           }
           else
           {
               @foreach (var item in Model)
               {
                   <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                       <div class="card" style="width: 18rem;">
                           <div class="card-body">
                               <h5 class="card-title text-primary">@item.JobTitle </h5>
                               <h6 class="card-subtitle mb-2 text-muted">@item.EmploymentType</h6>
                               <p class="card-text">@item.Experience
                                   <br/>
                                   @item.Rate
                                   <hr/>
                                   @item.DatePosted
                               </p>
                  
                               <a asp-controller="Home" asp-action="EmploymentDetail" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">more </a>
                           </div>
                       </div>
                   </div>
               }
           }
        </div><!-- row -->
    </div>
</section>