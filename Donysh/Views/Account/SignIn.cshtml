@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row p-5 text-center">
        <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12 offset-xl-3 offset-lg-3 offset-md-2">
            <h3 class="mt-5">
                ACCOUNT LOGIN
            </h3>
        </div>
        @if (ViewBag.Alert != null)
        {
            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12 offset-xl-3 offset-lg-3 offset-md-2 alert alert-warning alert-dismissible fade show" role="alert">
              @ViewBag.Alert   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-12">

            <form class="mt-5 text-left" asp-controller="Account" asp-action="SignIn" method="POST">
                <div class="form-row">
                    <div class="form-group col-xl-6 col-lg-6 col-md-8 col-sm-12 offset-xl-3 offset-lg-3 offset-md-2">
                        <label for="inputEmail4">Email / User name</label>
                        <input asp-for="UserName" type="text" class="form-control" id="inputEmail4" placeholder="Email/Username">
                    </div>
                    <div class="form-group col-xl-6 col-lg-6 col-md-8 col-sm-12 offset-xl-3 offset-lg-3 offset-md-2">
                        <label for="inputPassword4">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword4" placeholder="Password">
                    </div>


                    <div class="form-group col-xl-6 col-lg-6 col-md-8 col-sm-12 offset-xl-3 offset-lg-3 offset-md-2">
                        <div class="form-check">
                            <input asp-for="SaveInfo" class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                                Save password
                            </label>
                        </div>
                        <button type="submit" class="btn btn-warning mt-3">Sign in</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

