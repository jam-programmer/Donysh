@model ServiceDetail
@{
    ViewData["Title"] = "ServiceDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@await Component.InvokeAsync("HeaderComponent", new HeaderModel()
       {
    title = "Services",
           project = false
       })







<section class="section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 sm-m-30px-b">
                <img src="~/Service/@Model.Image" title="Dome" alt="Dome">
            </div>
            <div class="col-md-7">
                <div class="right-img-block">
                    <div class="section-title">
                        <h2 class="theme-after">@Model.Title</h2>
                        <div class="col-md-11 col-lg-11 text-center p-0px-lr m-10px-t">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div> <!-- col -->
        </div><!-- row -->
    </div>

    <div class="container">
     
        <div class="text-center mt-4 row"> 
      
               
            @foreach (var item in Model.Projects)
            {
 
                    <div class="col-md-6 col-lg-4 col-xl-4 col-sm-12  md-m-25px-b mt-3">
                        <div class="services-item">
                            <a asp-controller="Project" asp-action="ProjectDetail" asp-route-projectId="@item.Id">
                            <div class="img">
                                <img src="~/Project/@item.ProjectImage" title="@item.ProjectName" alt="@item.ProjectName ">
                            </div>
                            </a>
                            <div class="services-content">
                                <span class="projcard-tag">@item.Location</span>
                                <br/>
                                <h4 class="mt-3"><a asp-controller="Project" asp-action="ProjectDetail" asp-route-projectId="@item.Id">@item.ProjectName</a></h4>
                                <p> @Html.Raw(item.Description.Substring(0, Math.Min(200, item.Description.Length)))</p>
                                <hr/>
                                <a class="m-btn  text-white"
                                   style="background-color: #ff5722 !important"
                                   asp-controller="Project" asp-action="ProjectDetail" asp-route-projectId="@item.Id">View more</a>
                                <a class="m-btn  text-white" id="@item.Id" data-pdf="false" onclick="PdfAppend('@item.Id')"
                                   style="background-color: red !important"><i class="fas fa-print"></i></a>
                            </div>
                        </div>
                    </div>
     
          
            }
        </div>
    </div> <!-- container -->
</section>

                                @section Style
                                {
                                    <style>
                                        .projcard-tag {
                                            display: inline-block;
                                            background: #E0E0E0;
                                            color: #777;
                                            border-radius: 3px 0 0 3px;
                                            line-height: 26px;
                                            padding: 0 10px 0 23px;
                                            position: relative;
                                            margin-right: 20px;
                                            cursor: default;
                                            user-select: none;
                                            transition: color 0.2s;
                                        }
                                    </style>
                                }
