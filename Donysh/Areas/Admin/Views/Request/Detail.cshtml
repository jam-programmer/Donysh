@model Application.ViewModels.Request.RequestDetail
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="intro-y news xl:w-5/5 p-5 box mt-8">
    <!-- BEGIN: Blog Layout -->
    <h2 class="intro-y font-medium text-xl sm:text-2xl">
        @(Model.FirstName+" "+Model.LastName)
    </h2>
    <div class="intro-y text-gray-700 dark:text-gray-600 mt-3 text-xs sm:text-sm"> @Model.CreateTime  </div>
    <div class="intro-y mt-6">
      
    </div>
    
    <div class="intro-y text-justify leading-relaxed">
       
        <p>
            @Model.Description   </p>
       @if (Model.Services!.Count > 0)
       {
           <ul class="mt-5">
               @foreach (var item in Model.Services)
               {
                   <li class="btn btn-sm btn-rounded-warning w-24 ml-1 mb-2">@item.Title</li>
               }
           </ul>
       }
    </div>
    <div class="intro-y flex text-xs sm:text-sm flex-col sm:flex-row items-center mt-5 pt-5 border-t border-gray-200 dark:border-dark-5">
        <div class="flex items-center">
           
            <div class="mr-3 ml-auto">

                <div class="text-gray-600">Email: @Model.Email</div>
            </div>
        </div>
       
    </div>
    <!-- END: Blog Layout -->
   
</div>
