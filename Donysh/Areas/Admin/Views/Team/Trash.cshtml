@model ListGenerics<TeamViewModel>
@{
    ViewData["Title"] = "Trash Team Members";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="intro-y text-lg font-medium mt-5">
    Trash Team members
</h2>




<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">

        <a asp-area="Admin" asp-controller="Team" asp-action="Index" class="btn btn-primary shadow-md mr-2  ">Back To Team Members</a>
        <a asp-area="Admin" asp-controller="Team" asp-action="Trash" class="btn btn-sm btn-success shadow-md mr-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-rotate-cw block mx-auto"><polyline points="23 4 23 10 17 10"></polyline><path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path></svg></a>

        <div class="hidden md:block mx-auto text-gray-600">Showing 1 to 10 of 150 entries</div>
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">

            <div class="w-56 relative text-gray-700 dark:text-gray-300">
                <form asp-area="Admin" asp-controller="Team" asp-action="Trash" method="GET">
                    <input type="text" class="form-control w-56 box pr-10 placeholder-theme-13" name="search" placeholder="Search..." value="@(!string.IsNullOrEmpty(Model.SearchKeyword) ? Model.SearchKeyword : "")">
                    <button type="submit">
                        <svg style=" margin-bottom : 30px !important;" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                             stroke-linejoin="round" class="feather feather-search w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
    <!-- BEGIN: Data List -->
    @foreach (var item in Model.List!)
    {
        <div class="intro-y col-span-12 md:col-span-6" id="item_@item.Id">
            <div class="box">
                <div class="flex flex-col lg:flex-row items-center p-5">
                    <div class="w-24 h-24 lg:w-12 lg:h-12 image-fit lg:mr-1">
                        <img alt="@item.FullName" class="rounded-full" src="@(ViewBag.Base+item.AvatarPath)">
                    </div>
                    <div class="lg:ml-2 lg:mr-auto text-center lg:text-left mt-3 lg:mt-0">
                        <h5 class="font-medium">@item.FullName</h5>
                        <div class="text-gray-600 text-xs mt-0.5">@item.JobTitle</div>
                    </div>
                    <div class="flex mt-4 lg:mt-0">
                        <a onclick="Back('@item.Id','Team')" class="delete-btn ">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-rotate-ccw block mx-auto"><polyline points="1 4 1 10 7 10"></polyline><path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path></svg>  Restore
                        </a>
                        <a onclick="Remove('@item.Id','Team')" class="delete-btn text-theme-6 ml-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 block mx-auto"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>  Complete removal
                        </a>

                    </div>
                </div>
            </div>
        </div>
    }
    <!-- END: Data List -->
    <!-- BEGIN: Pagination -->
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-row sm:flex-nowrap items-center">
        <ul class="pagination">



            @if (Model.Count > 1 && Model.Pagination)
            {

                <li>
                    <a class="pagination__link" asp-area="Admin" asp-controller="Team" asp-action="Index" asp-route-page="1" asp-route-search="@Model.SearchKeyword"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevrons-left w-4 h-4"><polyline points="11 17 6 12 11 7"></polyline><polyline points="18 17 13 12 18 7"></polyline></svg> </a>
                </li>
                @for (int i = 1; i <= Model.Count; i++)
                {
                    <li>
                        <a class="pagination__link  @(Model.CurrentPage == i ? "pagination__link--active" : "") "
                           asp-area="Admin" asp-controller="Team" asp-action="Index" asp-route-page="@i" asp-route-search="@Model.SearchKeyword">@i</a>
                    </li>

                }



                <li>
                    <a class="pagination__link" asp-area="Admin" asp-controller="Team" asp-action="Index" asp-route-search="@Model.SearchKeyword" asp-route-page="@Model.Count"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevrons-right w-4 h-4"><polyline points="13 17 18 12 13 7"></polyline><polyline points="6 17 11 12 6 7"></polyline></svg> </a>
                </li>
            }
        </ul>
        <a class="btn btn-sm btn-danger shadow-md mr-2" asp-area="Admin" asp-controller="Team" asp-action="Trash">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 block mx-auto"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
        </a>
        <select class="w-20 form-select box mt-3 sm:mt-0">
            <option>10</option>
            <option>25</option>
            <option>35</option>
            <option>50</option>
        </select>
    </div>
    <!-- END: Pagination -->


</div>
